<%= form_for(@form) do |f| %>
  <% if @form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@form.errors.count, "error") %> prohibited this form from being saved:</h2>

      <ul>
      <% @form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :google_form_url %><br>
    <%= f.text_field :google_form_url %>
  </div>
  <div class="field">
    <%= f.label :frequency %><br>
    <%= f.select :frequency, ['weekly'] %>
  </div>
  <div class="field">
    <%= f.label :department_id %><br>
    <%= f.collection_select(:department_id, Department.all, :id, :name) %>
  </div>
  <div class="actions">
    <%= f.submit "Save", class:"btn" %>
    <%= link_to 'Cancel', forms_path, class:'btn red' %>
  </div>
<% end %>
