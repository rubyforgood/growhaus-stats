<nav>
  <div class="nav-wrapper">
    <ul>
      <%- Department.all.each do |department| %>
        <li>
          <a class="dropdown-button" href="#!" data-activates="dropdown_<%=department.name%>">
            <%= department.name %>
            <i class="material-icons right">arrow_drop_down</i>
          </a>
          <ul id="dropdown_<%=department.name%>" class="dropdown-content">
            <%- Form.where(department: department).each do |form| %>
              <li><%= link_to form.name, form_path(form) %></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>

    <ul>
      <li>
        <%= image_tag current_user.image_url %>
        <ul>
          <li>
            <%= current_user.name %><br>
            <%= current_user.email %>
          </li>
          <li><%= link_to "Logout", logout_path, method: :delete %></li>
        </ul>
      </li>
    </ul>
  </div>
</nav>
